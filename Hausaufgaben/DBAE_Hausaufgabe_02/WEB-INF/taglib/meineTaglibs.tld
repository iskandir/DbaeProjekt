	<!-- Wenn ein Tag Nav gefunden wird, gehe in die Klasse tags.NavigationTag -->
	<tag>
		<name>Nav</name>
		<tag-class>tags.NavigationTag</tag-class>
		<body-content>scriptless</body-content>
	</tag>
	
</taglib>


