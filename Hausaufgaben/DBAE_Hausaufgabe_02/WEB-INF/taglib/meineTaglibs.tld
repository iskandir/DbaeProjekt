<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<taglib>
<!-- Initialisierung / "GrundgerÃ¼st"-->
	<tlib-version>1.0</tlib-version>
	<jsp-version>2.0</jsp-version>
	<short-name>CustomTaglibs</short-name>

<!-- Initialisierung unseres ersten Tags -->
	<tag>
	<!-- Wenn ein Tag Benutzer gefunden wird, gehe in die Klasse tags.BenutzerTag -->
		<name>Benutzer</name>
		<tag-class> tags.BenutzerTag</tag-class>
